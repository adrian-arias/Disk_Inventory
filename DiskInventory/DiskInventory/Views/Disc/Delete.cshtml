@model Disc
@{
    ViewBag.Title = "Delete Disk";
}

<h2>Confirm Deletion</h2>
<h3>@Model.DiscName</h3>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="DiscId" />

    <button type="submit" class="btn btn-primary">Delete</button>
    <a asp-controller="Disk" asp-action="List" class="btn btn-primary">Cancel</a>
</form>